load("@bazel_skylib//rules:common_settings.bzl", "string_flag")
load("//old_projects/foundation/build/rules:build.bzl", "level_3_implementation_dependencies")
load("//old_projects/foundation/build/rules/header:platform_export_header.bzl", "platform_export_header")
load("//old_projects/foundation/build/rules/cpp:cpp_library.bzl", "cpp_library")
load("//old_projects/foundation/frameworks:build_defines.bzl", "LEVEL_1")
load("//old_projects/foundation/frameworks/core:build_defines.bzl", "LEVEL_2")
load("//old_projects/foundation/frameworks/core/simd:build_defines.bzl", "LEVEL_3")
load(
    "//old_projects/foundation/frameworks/core/simd/common:build_defines.bzl",
    "BUILD_DEFINE_GENERAL",
    "IMPLEMENTATION_DEFAULT",
    "LEVEL_3_PLATFORM",
)
load("//old_projects/foundation/frameworks/core/simd/common/general:build_defines.bzl", LEVEL_3_IMPLEMENTATION_GENERAL = "LEVEL_3_IMPLEMENTATION")

string_flag(
    name = "implementation",
    build_setting_default = IMPLEMENTATION_DEFAULT,
    values = [
        LEVEL_3_IMPLEMENTATION_GENERAL,
    ],
)

config_setting(
    name = "is_implementation_general",
    flag_values = {
        ":implementation": LEVEL_3_IMPLEMENTATION_GENERAL,
    },
    visibility = ["//old_projects/foundation/frameworks/core/simd:__subpackages__"],
)

cpp_library(
    name = "export",
    hdrs = ["common.hpp"],
    defines = select({
        ":is_implementation_general": [BUILD_DEFINE_GENERAL],
    }),
    visibility = ["//old_projects/foundation/frameworks/core/simd:__pkg__"],
    deps = select({
        ":is_implementation_general": level_3_implementation_dependencies(
            level_1 = LEVEL_1,
            level_2 = LEVEL_2,
            level_3 = LEVEL_3,
            level_3_implementation = LEVEL_3_IMPLEMENTATION_GENERAL,
            level_3_platform = LEVEL_3_PLATFORM,
        ),
    }),
)

platform_export_header(
    name = "%s_export_header" % LEVEL_3_PLATFORM,
    level_1 = LEVEL_1,
    level_2 = LEVEL_2,
    level_3 = LEVEL_3,
    level_3_platform = LEVEL_3_PLATFORM,
)
