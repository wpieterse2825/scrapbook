load(
    "@bazel_skylib//rules:common_settings.bzl",
    "bool_flag",
    "string_flag",
)
load(
    "@rules_python//python:defs.bzl",
    "py_binary",
    "py_library",
)
load("@com_google_protobuf//:protobuf.bzl", "py_proto_library")

bool_flag(
    name = "use_persistent_workers",
    build_setting_default = True,
    visibility = ["//visibility:public"],
)

string_flag(
    name = "logging_level",
    build_setting_default = "information",
    values = [
        "trace",
        "debug",
        "information",
        "warning",
        "error",
    ],
    visibility = ["//visibility:public"],
)

py_binary(
    name = "driver",
    srcs = ["driver.py"],
    main = "driver.py",
    visibility = ["//visibility:public"],
    deps = [
        ":compiler",
        "//idl_compiler:driver",
        "//idl_compiler:driver_binary_output",
        "//idl_compiler:driver_text_input",
    ],
)

py_library(
    name = "compiler",
    srcs = ["compiler.py"],
    visibility = ["//idl_compiler/compiler/enumeration:__subpackages__"],
    deps = [
        ":protocol_py_proto",
        "//idl_compiler/compiler",
    ],
)

py_proto_library(
    name = "protocol_py_proto",
    srcs = ["protocol.proto"],
    visibility = ["//idl_compiler:__subpackages__"],
    deps = ["//idl_compiler/compiler:shared_py_proto"],
)
